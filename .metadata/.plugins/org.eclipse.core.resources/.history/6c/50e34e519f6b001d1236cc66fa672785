#ifndef INC_SCHEDULER_H_
#define INC_SCHEDULER_H_

typedef struct{
	void (*pTask)(void);
	uint32_t Delay;
	uint32_t Period;
	uint8_t RunMe;
	uint32_t TaskID;
} sTask;

// MUST BE ADJUSTED FOR EACH NEW PROJECT
#define SCH_MAX_TASKS 40
#define NO_TASK_ID 0
sTask SCH_tasks_G [SCH_MAX_TASKS ];

void SCH_Init(void);

#endif /* INC_SCHEDULER_H_ */
